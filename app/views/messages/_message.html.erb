<div id="message-<%= message.id %>" class="message-content <%= (message.user == current_user) ? "user-message-content" : "agent-message-content" %>">
  <% if message.user == current_user %>
    <div class="content">
      <p class="p-user"><%= message.content %></p>
      <span class="time time-user"><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></span>
    </div>
    <%# <div class="image-chat">
      <%= cl_image_tag message.user.avatar.key%>
    <%#</div> %>
  <% else %>
    <div class="image-chat">
      <%= cl_image_tag message.user.avatar.key%>
    </div>
    <div class="content">
      <p><%= message.content %></p>
      <span class="time"><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></span>
    </div>
  <% end %>
</div>

