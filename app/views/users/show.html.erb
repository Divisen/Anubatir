              <%= cl_image_tag @user.logo.key, class: "rounded-circle img-fluid", style:"width: 150px; height: 150px; object-fit:cover;" %>
            <% else %>
              <%= cl_image_tag @user.avatar.key, class: "rounded-circle img-fluid", style:"width: 150px; height: 150px; object-fit:cover;" %>
            <% end %>
