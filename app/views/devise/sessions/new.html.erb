<% @skipnavbar = true %>
<div class="page-wraper">
  <div class="blog-page-content full-blog-dark style-1">
    <div class="bg-img-fix" style="background-image:url(https://construct.dexignlab.com/xhtml/images/background/bg8.jpg);">
      <div class="clearfix">
        <div class='col-lg-8 p-a0'> </div>
        <div id="form" class="col-lg-4 bg-white-login z-index2 relative skew-section left-bottom winHeight d-flex loginHeight">
          <div class="login-form style-2 align-self-center">
            <div class="login-logo logo-header p-tb30">
              <%= image_tag("logo.png") %>
            </div>
            <h3 class="form-title m-t0">Sign In</h3>
            <div class="dez-separator-outer m-b5">
              <p>Enter your e-mail address and your password.</p>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
                  <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit, "Log in", class:"btn-login" %>
                </div>
              <% end %>
              <div class="form-actions link-signup-password">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
