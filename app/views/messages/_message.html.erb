<div id="message-<%= message.id %>">
  <small>
    <%= cl_image_tag message.user.avatar.key, style:"width:40px; height:40px; border-radius:50%; object-fit:cover;"%>
    <strong><%= message.user.username %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
</div>
